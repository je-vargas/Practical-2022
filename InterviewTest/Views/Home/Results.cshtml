@using InterviewTest.Api


@{
    ViewData["Title"] = "Results";
}

<h1 class="mt-3">Results</h1>

<table class="table mt-4">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">School</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">DoB</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <th scope="row">@contact.Id</th>
                <td>@contact.School</td>
                <td>@contact.FirstName</td>
                <td>@contact.LastName</td>
                <td>@contact.PhoneNumber</td>
                <td>@contact.DateOfBirth</td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="Results?currentPage=1">1</a></li>
        <li class="page-item"><a class="page-link" href="Results?currentPage=2">2</a></li>
        <li class="page-item"><a class="page-link" href="Results?currentPage=3">3</a></li>
        <li class="page-item"><a class="page-link" href="Results?currentPage=4">4</a></li>
        <li class="page-item"><a class="page-link" href="Results?currentPage=5">5</a></li>
        <li class="page-item"><a class="page-link" href="Results?currentPage=6">6</a></li>
    </ul>
</nav>



